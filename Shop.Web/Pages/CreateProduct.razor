@page "/CreateProduct"
@using Models.Dtos;
@inherits CreateProductBase

<EditForm Model="@Product" OnValidSubmit="CreateProduct_Click">
    <!-- Name input -->
    <div class="form-outline mb-4">
        <InputText type="text" id="form4Example1" class="form-control" @bind-Value="@Product.Name" />
        <label class="form-label" for="form4Example1">Name</label>
    </div>

    <!-- Message input -->
    <div class="form-outline mb-4">
        <InputTextArea class="form-control" id="form4Example3" rows="4" @bind-Value="@Product.Description" @bind-Value:format="string" />
        <label class="form-label" for="form4Example3">Message</label>
    </div>

    <div class="form-outline mb-4">
        <InputFile class="form-control" @bind-Value="@Product.ImageURL" />
        <label class="form-label">Image</label>
    </div>

    <div class="form-outline mb-4">
        <InputNumber id="form4Example1" class="form-control" @bind-Value="@Product.Price" />
        <label class="form-label" for="form4Example3">Price</label>
    </div>

    <div class="form-outline mb-4">
        <InputNumber class="form-control" rows="4" @bind-Value="Product.Qty" />
        <label class="form-label">Qty</label>
    </div>

    <div class="form-outline mb-4">
        <InputNumber class="form-control" rows="4" @bind-Value="Product.ProductCategoryId" />
        <label class="form-label">ProductCategory</label>
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Send</button>
</EditForm>
