@page "/"
@using Models.Dtos
@inherits ProductsBase

@if (Products is null)
{
    <DisplaySpinner> </DisplaySpinner>
}
else
{
    <h3 class="mb-5">Products</h3>

    int itemsPerRow = 4;

    @foreach (var item in GetGroupedProductDtosByCategory())
    {
        <h4>@GetProductCategoryName(item)</h4>
        <div class="row mt-3">
            @for (int i = 0; i < item.Count(); i += 4)
            {
                <DisplayProducts Products="@item.Skip(i).Take(4)"></DisplayProducts>
            }
        </div>
        <hr class="mb-3" />
    }

}
